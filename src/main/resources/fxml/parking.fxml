<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.parking.controllers.ParkingController" spacing="10" alignment="CENTER" styleClass="vbox">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <TextField fx:id="vehicleNumberField" promptText="Vehicle Number" styleClass="text-field"/>
    <Button text="Enter" onAction="#handleEntry" styleClass="button"/>
    <Button text="Exit" onAction="#handleExit" styleClass="button"/>
    <Label fx:id="statusLabel" styleClass="status-label"/>
</VBox>
